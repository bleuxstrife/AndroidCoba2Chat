<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/default_avata"/>

    <LinearLayout
        android:id="@+id/layout_text_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imageView3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner2"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textContentFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="a"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />
        <TextView
            android:id="@+id/time_friend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:text="yesterday"
            android:textColor="#000"
            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_image_friend"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imageView3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner2"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_friend"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:background="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/time_friend_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:text="yesterday"
            android:textColor="#000"
            android:textSize="10dp"/>
    </LinearLayout>


</RelativeLayout>